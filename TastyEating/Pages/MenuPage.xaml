<Page x:Class="TastyEating.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TastyEating.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Black"
      Foreground="White"
      FontSize="20"
      Title="MenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel>
                <TextBlock Text="Поиск" Margin="0 0 10 0"/>
                <TextBox x:Name="Searchtb" Height="30" />
            </DockPanel>
            <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                <Run Text="ФИО:"/>
                <Run Text="{Binding Fullname}"/>
            </TextBlock>
        </Grid>

        <ListView x:Name="LvMain" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding Photo}" Height="50" Stretch="Uniform"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock>
        <Run Text="Наименование блюда:"/>
        <Run Text="{Binding Name}"/>
                            </TextBlock>
                            <TextBlock>
        <Run Text="Описание:"/>
        <Run Text="{Binding Structure}"/>
                            </TextBlock>
                            <TextBlock>
        <Run Text="Категория:"/>
        <Run Text="{Binding Category.Name}"/>
                            </TextBlock>
                            <TextBlock>
        <Run Text="Цена:"/>
        <Run Text="{Binding Price}"/>
                            </TextBlock>
                        </StackPanel>

                    </Grid>
                    
                </DataTemplate>
                
            </ListView.ItemTemplate>
            
        </ListView>

        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
        </StackPanel>
    </Grid>
</Page>
