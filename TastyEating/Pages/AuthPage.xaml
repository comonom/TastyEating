<Page x:Class="TastyEating.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TastyEating"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontSize="22"
      Background="Black"
      Foreground="White"
      Title="AuthPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Grid.Row="1" Width="400">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Авторизация"/>
            </StackPanel>

            <TextBlock Text="Логин"/>
            <TextBox Name="Logintb"/>

            <TextBlock Text="Пароль"/>
            <TextBox Name="Passwordtb"/>
            <Button Content="Войти" Name="Authbtn" Margin="20" Width="150" Click="Authbtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
